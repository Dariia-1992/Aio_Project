<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background">

        <ImageView
            android:id="@+id/toolbarIconBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/toolbar_icon_margin"
            android:src="@drawable/back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/toolbarIconBack"
            android:layout_toStartOf="@id/vipIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/title_color"
                android:ellipsize="end"
                android:maxLines="1"
                fontPath="fonts/Roboto-Bold.ttf"
                tools:ignore="MissingPrefix"
                tools:text="Description"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textSize="13sp"
                android:textColor="@color/white"
                fontPath="fonts/Roboto-Bold.ttf"
                tools:ignore="MissingPrefix"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/vipIcon"
            android:layout_width="@dimen/vip_icon_width"
            android:layout_height="@dimen/vip_icon_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/iap_subscribe"
            android:layout_marginEnd="@dimen/vip_icon_margin"
            android:layout_marginStart="@dimen/vip_icon_margin"/>

    </RelativeLayout>

</RelativeLayout>