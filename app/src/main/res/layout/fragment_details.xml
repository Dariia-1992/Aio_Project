<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background">

        <ImageView
            android:id="@+id/toolbarIconBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/toolbar_icon_margin"
            android:layout_marginStart="@dimen/toolbar_icon_margin"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/back"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/toolbarIconBack"
            android:layout_toStartOf="@id/vipIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/title_color"
                android:ellipsize="end"
                android:maxLines="1"
                fontPath="fonts/Roboto-Bold.ttf"
                tools:ignore="MissingPrefix"
                tools:text="Description"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textSize="13sp"
                android:textColor="@color/white"
                fontPath="fonts/Roboto-Bold.ttf"
                tools:ignore="MissingPrefix"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/vipIcon"
            android:layout_width="@dimen/vip_icon_width"
            android:layout_height="@dimen/vip_icon_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/iap_subscribe"
            android:layout_marginEnd="@dimen/vip_icon_margin"
            android:layout_marginStart="@dimen/vip_icon_margin"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imagesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="224dp"
                        android:background="#ff0000"/>

                <!--                <me.relex.circleindicator.CircleIndicator-->
                <!--                    android:id="@+id/circleIndicator"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_alignBottom="@+id/skinImage"-->
                <!--                    android:layout_centerHorizontal="true"-->
                <!--                    android:layout_marginBottom="12dp" />-->

            </RelativeLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/imagesContainer"
                android:background="@color/black"/>

            <RelativeLayout
                android:id="@+id/detailsButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detailsButtonHeight"
                android:layout_below="@id/divider"
                android:layout_marginTop="8dp"
                android:layout_marginStart="@dimen/details_main_margin"
                android:layout_marginEnd="@dimen/details_main_margin">

                <RelativeLayout
                    android:id="@+id/downloadButtonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_button_download"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/downloadImage"
                            android:layout_width="@dimen/download_image_size"
                            android:layout_height="20dp"
                            android:src="@drawable/download"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/downloadImage"
                            android:text="@string/download"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:textSize="18sp"
                            fontPath="fonts/Roboto-Black.ttf"
                            android:layout_marginStart="8dp"
                            tools:ignore="MissingPrefix"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/installButtonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_button_install"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/installImage"
                            android:layout_width="@dimen/download_image_size"
                            android:layout_height="20dp"
                            android:src="@drawable/install"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/installImage"
                            android:text="@string/install"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:textSize="18sp"
                            fontPath="fonts/Roboto-Black.ttf"
                            android:layout_marginStart="8dp"
                            tools:ignore="MissingPrefix"/>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                     android:id="@+id/progressBarContainer"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@drawable/background_button_download">

                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_marginStart="36dp"
                         android:layout_marginEnd="36dp">

                         <TextView
                             android:id="@+id/downloadingText"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="@string/downloading"
                             android:textColor="@color/white"
                             android:layout_centerHorizontal="true"
                             android:textSize="9sp"
                             fontPath="fonts/Roboto-Black.ttf"
                             tools:ignore="MissingPrefix"/>

                         <ProgressBar
                             android:id="@+id/progressBar"
                             android:layout_width="match_parent"
                             android:layout_height="7dp"
                             android:layout_marginTop="2dp"
                             style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                             android:max="100"
                             tools:progress="25"
                             android:layout_below="@id/downloadingText"
                             android:splitTrack="false"
                             android:progressDrawable="@drawable/progressbar_downloading"
                             android:thumb="@null"/>

                     </RelativeLayout>


                 </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/detailsReadMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsButtonContainer"
                android:layout_marginTop="10dp"
                android:text="@string/read_more"
                android:textColor="@color/read_more_color"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                fontPath="fonts/Roboto-Medium.ttf"
                tools:ignore="MissingPrefix"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/detailsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detailsButtonContainer"
                android:layout_marginTop="10dp"
                android:layout_marginStart="@dimen/details_main_margin"
                android:layout_marginEnd="@dimen/details_main_margin"
                android:textColor="@color/details_text_color"
                android:textSize="16sp"
                fontPath="fonts/Roboto-Regular.ttf"
                tools:ignore="MissingPrefix"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>