<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbar_background">
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/logo_icon"
            android:layout_height="@dimen/logo_icon"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_toolbar"
            android:layout_marginEnd="@dimen/margin_toolbar"
            android:src="@drawable/back"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/back_icon"
            android:padding="4dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/title_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/vip"
            android:layout_width="@dimen/logo_icon"
            android:layout_height="@dimen/logo_icon"
            android:layout_alignParentEnd="true"
            android:src="@drawable/iap_subscribe"
            android:layout_marginEnd="@dimen/margin_toolbar"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/skinImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_image_width"
                android:src="@drawable/null_image"
                android:scaleType="centerCrop"/>

            <View
                android:id="@+id/view_color"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/skinImage"
                android:background="@color/black"/>
            <RelativeLayout
                android:id="@+id/functional_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_color"
                android:background="@color/main_background">

                <ImageView
                    android:id="@+id/download_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/download_button_height"
                    android:scaleType="centerInside"
                    android:layout_margin="@dimen/main_margin"
                    android:src="@drawable/download_bt"/>
                <ImageView
                    android:id="@+id/install_button"
                    android:layout_height="@dimen/download_button_height"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_margin="@dimen/main_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/installx"/>

                <RelativeLayout
                    android:id="@+id/downloadingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/download_button_height"
                    android:layout_margin="@dimen/main_margin"
                    android:visibility="gone">
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_height="5dp"
                        android:max="100"
                        tools:progress="25"
                        android:layout_marginTop="9dp"
                        android:splitTrack="false"
                        android:minHeight="0dp"
                        android:maxHeight="100dp"
                        android:progressDrawable="@drawable/progressbar_downloading"
                        android:thumb="@null"/>
                    <TextView
                        android:id="@+id/downloadingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@id/progressBar"
                        android:textAllCaps="true"
                        android:text="@string/downloading"/>
                </RelativeLayout>
            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/functional_block"
                    android:layout_marginLeft="@dimen/main_margin"
                    android:layout_marginRight="@dimen/main_margin">

                    <RelativeLayout
                        android:id="@+id/read_more_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/download_button_height">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_more"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/descriptionView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:textSize="13sp"
                        android:visibility="gone"
                        android:textColor="@color/black"/>

                </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>